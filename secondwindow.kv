# Second Window

<CreatePasswordClickableTextField>
    create_passw: create_passw
    MDTextField:
        id: create_passw
        password: True
        hint_text: "Password"
        text_color: 'black'
        line_color_normal: 'black'
        line_color_focus: 'black'     
        hint_text_color_normal: 'black'     
        hint_text_color_focus: 'black'
        text_color_focus: 'black'   
        font_name: 'assets/fonts/Lexend-Regular.ttf'
        mode: "rectangle"
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: create_passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            create_passw.password = False if create_passw.password is True else True

<ConfirmPasswordClickableTextField>
    confirm_passw: confirm_passw
    MDTextField:
        id: confirm_passw
        password: True
        text_color: 'black'
        line_color_normal: 'black'
        line_color_focus: 'black'     
        hint_text_color_normal: 'black'     
        hint_text_color_focus: 'black'
        text_color_focus: 'black'   
        hint_text: "Confirm Password"
        mode: "rectangle"
        font_name: 'assets/fonts/Lexend-Regular.ttf'
        font_size: "15dp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: confirm_passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            confirm_passw.password = False if confirm_passw.password is True else True

<SecondWindow>:
    name: "second"
    create_username: create_username
    create_password: create_password
    confirm_passw: confirm_password
    MDBoxLayout:
        size_hint: 1, 1
        md_bg_color: [142/255, 208/255, 196/255, 1]
        pos_hint: {'center_x': .5, 'center_y': .5}
        MDBoxLayout:
            size_hint: .9, .7
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                size_hint: .9, .1
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                MDLabel:
                    text : 'SIGN UP'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    font_size: '35sp'
                    font_name: 'assets/fonts/Lexend-Bold.ttf'
                MDLabel:
                    text : 'Create a new account'
                    theme_text_color: 'Custom'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text_color: 'black'
                    font_size: '15sp'
                    font_name: 'assets/fonts/Lexend-Regular.ttf'
            MDBoxLayout:
                size_hint: .9, .1
            MDBoxLayout:
                size_hint: .9, .5
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                MDBoxLayout:
                    orientation: 'vertical'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    MDTextField:
                        id: create_username
                        mode: "rectangle"
                        hint_text: "Username"
                        text_color: 'black'
                        line_color_normal: 'black'
                        line_color_focus: 'black'     
                        hint_text_color_normal: 'black'     
                        hint_text_color_focus: 'black'
                        text_color_focus: 'black'   
                        font_name: 'assets/fonts/Lexend-Regular.ttf'
                        font_size: "15sp"
                    CreatePasswordClickableTextField:
                        id: create_password
                    ConfirmPasswordClickableTextField
                        id: confirm_password
                    MDBoxLayout:
                        orientation: 'horizontal'
                        spacing: 20
                        size_hint_y: None
                        pos_hint: {'center_x': .5, 'center_y': .5}

                        MDIconButton:
                            icon: 'arrow-left'
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            on_release:
                                root.clear()
                                app.root.current = "first"
                                root.manager.transition.direction = "right"
                        MDFlatButton:
                            text: "Sign up"
                            pos_hint: {'center_x': .5, 'center_y': .5}
                            font_name: 'assets/fonts/Lexend-Medium.ttf'
                            font_size: "15sp"
                            text_color: "white"
                            theme_text_color: "Custom"
                            size_hint_x: 0.50
                            md_bg_color: [20/255, 20/255, 20/255, 1]
                            on_release:
                                root.signUp()
                                
