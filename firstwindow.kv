# First Window

<ClickableTextField>
    passw: passw
    MDTextField:
        id: passw
        password: True
        hint_text: "Password"
        mode: "rectangle"
        text_color: 'black'
        line_color_normal: 'black'
        line_color_focus: 'black'     
        hint_text_color_normal: 'black'     
        hint_text_color_focus: 'black'
        text_color_focus: 'black'   
        font_name: 'assets/fonts/Lexend-Regular.ttf'
        font_size: "15sp"
    MDIconButton:
        icon: "eye-off"
        ripple_scale: 0
        pos_hint: {"right": 0.99}
        pos: passw.width - self.width + dp(8), 0
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            passw.password = False if passw.password is True else True
            
<FirstWindow>:
    name: "first"
    username: username
    password:password
    MDBoxLayout:
        size_hint: 1, 1
        md_bg_color: [142/255, 208/255, 196/255, 1]
        pos_hint: {'center_x': .5, 'center_y': .5}
        MDBoxLayout:
            size_hint: .9, .7
            orientation: 'vertical'
            pos_hint: {'center_x': .5, 'center_y': .5}

            MDBoxLayout:
                size_hint: .9, .1
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                MDLabel:
                    text : 'LOGIN'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    theme_text_color: 'Custom'
                    text_color: 'black'
                    font_size: '35sp'
                    font_name: 'assets/fonts/Lexend-Bold.ttf'
                MDLabel:
                    text : 'Please sign in to continue'
                    theme_text_color: 'Custom'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text_color: 'black'
                    font_size: '15sp'
                    font_name: 'assets/fonts/Lexend-Regular.ttf'
            MDBoxLayout:
                size_hint: .9, .1
                
            MDBoxLayout:
                size_hint: .9, .4
                pos_hint: {'center_x': .5, 'center_y': .5}
                orientation: 'vertical'
                MDBoxLayout:
                    orientation: 'vertical'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    MDTextField:
                        id: username
                        mode: "rectangle"
                        theme_text_color: 'Custom'
                        text_color: 'black'
                        line_color_normal: 'black'
                        line_color_focus: 'black'     
                        hint_text_color_normal: 'black'     
                        hint_text_color_focus: 'black'
                        text_color_focus: 'black'           
                        hint_text: "Username"
                        font_name: 'assets/fonts/Lexend-Regular.ttf'
                        font_size: "15sp"
                    ClickableTextField:
                        id: password
                MDBoxLayout:
                    orientation: 'horizontal'
                    spacing: 20
                    size_hint_y: None
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    MDFlatButton:
                        text: "Sign in"
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        font_name: 'assets/fonts/Lexend-Medium.ttf'
                        font_size: "15sp"
                        text_color: "white"
                        theme_text_color: "Custom"
                        size_hint_x: 0.50
                        md_bg_color: [20/255, 20/255, 20/255, 1]
                        on_release:
                            root.login()
                    MDFlatButton:
                        text: "Sign up"
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        font_name: 'assets/fonts/Lexend-Medium.ttf'
                        font_size: "15sp"
                        text_color: "white"
                        theme_text_color: "Custom"
                        size_hint_x: 0.50
                        md_bg_color: [20/255, 20/255, 20/255, 1]
                        on_release:
                            root.clear()
                            app.root.current = "second"
                            root.manager.transition.direction = "left"
            MDBoxLayout:
                size_hint: .9, .1