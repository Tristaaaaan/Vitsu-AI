<LoadingScreen>:
  name: "loading"
  MDBoxLayout:
    size_hint: 1, 1
    md_bg_color: [142/255, 208/255, 196/255, 1]
    pos_hint: { "center_x": .5, "center_y": .5 }
    MDBoxLayout:
      size_hint: 1, .6
      orientation: "vertical"
      pos_hint: { "center_x": .5, "center_y": .5 }
      MDSpinner:
        size_hint: .2, .4
        size: dp(5), dp(5)
        pos_hint: {'center_x': .5}
        determinate: False
        color: 'black'
      MDLabel:
        text: 'Vitsu AI'
        halign: 'center'
        pos_hint: {'center_x': .5}
        text_color: 'black'
        size_hint: .9, .1
        theme_text_color: 'Custom'
        #font_name: 'assets/fonts/Lexend-Medium.ttf'
        font_size: '24sp'
      MDLabel:
        text: 'Speak, Connect, Understand: Bridging Conversations Worldwide.'
        halign: 'center'
        text_color: 'black'
        theme_text_color: 'Custom'
        pos_hint: {'center_x': .5}
        size_hint: .9, .05
        font_size: '12sp'
        #font_name: 'assets/fonts/Lexend-Regular.ttf'
